<div class="container">
    <%for user in @users%>
        <div class="row justify-content-xl-center">
            <div class="col-9 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded   ">
                <div class="card-header font-italic">User name: <%= user.username %></div>
                <div class="card-body">
                <%= gravatar_for user%>
                <p class="card-text">Email address: <%=user.email, class%></p>
                <%= link_to "View", user_path(user.id), class:"btn btn-outline-success"%>
                <%= link_to "Edit", edit_user_path(user.id), class:"btn btn-outline-primary"%>
                <%#= link_to "Delete", article_path(article.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
                </div>
                <div class="card-footer text-muted">
                    <p>Created <%= time_ago_in_words(user.created_at)%> ago,
                        edited <%= time_ago_in_words(user.updated_at)%> ago.</p>
                </div>
                </div>
            </div>
        </div>
    <%end%>
</div>


