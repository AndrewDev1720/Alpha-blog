<%if @article.errors.any?%>
    <%@article.errors.full_messages.each do |msg|%>
    <ul>
       <li> <%=msg%> </li>
    </ul>
    <% end %>
<%end%>
<%= form_with(model: @article, local: true) do |f|%>
    <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label"%> <br/>
        <div class="col-10"><%= f.text_field(:title, class: "form-control")%></div>
    </div>
    <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label"%> <br/>
        <div class="col-10"><%= f.text_area(:description, rows: 10, class: "form-control")%></div>
    </div>

    <div class="form-group row"><%= f.submit class:"btn btn-outline-light btn-lg"%></div>
<%end%>

<%= link_to "Back to Articles List", articles_path, method: :get, class:"btn btn-secondary", style: "margin-right: 20px"%>
